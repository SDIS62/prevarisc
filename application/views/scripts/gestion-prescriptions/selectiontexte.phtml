<?php
//Page utilise uniquement pour l'auto compltion- Retourne infos en json
$q = strtolower($_GET["q"]);
if(!$q)
	return;

$items = array();
foreach($this->selectTexte as $texte)
{
	$id = $texte['ID_TEXTE'];
	$texte = $texte['LIBELLE_TEXTE'];		
	array_push($items, array(
		"id" => $id,
		"infos" => $texte
	));
}

echo json_encode($items);
?>