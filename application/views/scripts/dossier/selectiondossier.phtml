<?php
//Page utilise uniquement pour l'auto compltion- Retourne infos en json
$q = strtolower($_GET["q"]);
if(!$q)
	return;

$items = array();
foreach($this->selectArticle as $article)
{
	$id = $article['ID_ARTICLE'];
	$article = $article['LIBELLE_ARTICLE'];		
	array_push($items, array(
		"id" => $id,
		"infos" => $article
	));
}
echo json_encode($items);

?>